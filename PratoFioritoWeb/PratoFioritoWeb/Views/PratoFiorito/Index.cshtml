@using PratoFioritoWeb.Models;

@model Difficulty

@{
    Random r = new Random();
    int type = r.Next(0, 2);
}

<div class="grid-container">
    @for (int h = 0; h < Model.height; h++)
    {
        @for (int w = 0; w < Model.width; w++)
        {
            <div class="grid-element" data-x="@h" data-y="@w" data-type="@r.Next(0, 2)"></div>
        }
    }
</div>

<br />
<div class="grid-element-bomb" style="height:100px;width:100px;">
</div>

<br />
<svg width="400" height="180">
    <rect x="50" y="20" rx="20" ry="20" width="150" height="150"
          style="fill:red;stroke:black;stroke-width:5;opacity:0.5" />
</svg>

@section Style {
    <link rel="stylesheet" href="~/img/bomb-thumbnail.png" />
}

@section Scripts{
    <script src="~/js/pratofiorito.js" type="text/javascript"></script> 
}
